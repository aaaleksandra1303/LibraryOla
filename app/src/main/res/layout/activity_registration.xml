<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="libraryola.akademiakodu.pl.libraryola.RegistrationActivity">

    <TextView
        android:text="Witaj w systemie rejestracji "
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Wypelnij formularz i zarejestruj sie jako nowy uzytkownik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:id="@+id/textView4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="50dp"
        android:id="@+id/textViewLoginReg" />

    <TextView
        android:text="Haslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPassword"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editLogingReg"
        android:layout_alignLeft="@+id/textViewLoginReg"
        android:layout_alignStart="@+id/textViewLoginReg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:maxLength="10"
        android:textSize="10dp"
        android:id="@+id/editPasswordReg"
        android:hint="Wprowadz haslo"
        android:layout_alignBaseline="@+id/textViewPassword"
        android:layout_alignBottom="@+id/textViewPassword"
        android:layout_alignLeft="@+id/editPasswordRepeat"
        android:layout_alignStart="@+id/editPasswordRepeat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Wpisz login"
        android:textSize="10dp"

        android:ems="10"
        android:id="@+id/editLogingReg"
        android:layout_alignBaseline="@+id/textViewLoginReg"
        android:layout_alignBottom="@+id/textViewLoginReg"
        android:layout_alignLeft="@+id/editPasswordReg"
        android:layout_alignStart="@+id/editPasswordReg" />

    <CheckBox
        android:text="Czy chcesz byc moderatorem?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTelefon"
        android:layout_alignLeft="@+id/textVievTel"
        android:layout_alignStart="@+id/textVievTel"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="48dp"
        android:id="@+id/checkBoxModerator" />

    <Button
        android:text="Rejestracja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBoxModerator"
        android:layout_toRightOf="@+id/textViewLoginReg"
        android:layout_toEndOf="@+id/textViewLoginReg"
        android:layout_marginTop="15dp"
        android:id="@+id/buttonRegisterNewUser" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textSize="10dp"
        android:hint="Powtorz haslo"
        android:maxLength="10"
        android:id="@+id/editPasswordRepeat"
        android:layout_alignBaseline="@+id/textViewPasswordRepeat"
        android:layout_alignBottom="@+id/textViewPasswordRepeat"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:text="Numer telefonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textVievTel"
        android:layout_alignBaseline="@+id/editTextTelefon"
        android:layout_alignBottom="@+id/editTextTelefon"
        android:layout_alignLeft="@+id/textViewPasswordRepeat"
        android:layout_alignStart="@+id/textViewPasswordRepeat" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:textSize="10dp"
        android:hint="Wprowadz numer telefonu"
        android:id="@+id/editTextTelefon"
        android:layout_below="@+id/editPasswordRepeat"
        android:layout_alignLeft="@+id/editPasswordRepeat"
        android:layout_alignStart="@+id/editPasswordRepeat" />

    <TextView
        android:text="Powtorz haslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPasswordRepeat"
        android:layout_below="@+id/editPasswordReg"
        android:layout_alignLeft="@+id/textViewPassword"
        android:layout_alignStart="@+id/textViewPassword" />


</RelativeLayout>
